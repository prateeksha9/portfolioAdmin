<h1>Upload Sketches</h1>
<hr />
<div>
  <form
    action="/image/uploadProject"
    method="POST"
    enctype="multipart/form-data"
  >
    <div>
      <label for="name">Title</label>
      <input
        type="text"
        id="name"
        placeholder="Name"
        value=""
        name="name"
        required
      />
    </div>
    <div>
      <label for="desc">Description</label>
      <textarea
        id="desc"
        name="desc"
        value="desc"
        rows="2"
        placeholder="Language"
        required
      >
      </textarea>
    </div>
    <div>
      <label for="technology">Technology</label>
      <input type="checkbox" name="technology" value="HTML" />HTML
      <br />
      <input type="checkbox" name="technology" value="CSS" />CSS
      <br />
      <input type="checkbox" name="technology" value="JavaScript" />JavaScript
      <br />

      <input type="checkbox" name="technology" value="Node.js" />Node.js
      <br />
      <input type="checkbox" name="technology" value="React.js" />React.js
      <br />
      <input type="checkbox" name="technology" value="Redux" />Redux
      <br />
      <input type="checkbox" name="technology" value="MongoDB" />MongoDB
      <br />
      <input type="checkbox" name="technology" value="Express.js" />Express.js
      <br />
      <input type="checkbox" name="technology" value="Wordpress" />Wordpress
      <br />
      <input type="checkbox" name="technology" value="Elementor" />Elementor
      <br />
      <input type="checkbox" name="technology" value="Python" />Python
      <br />
    </div>
    <div>
      <label for="image">Upload Image</label>
      <input type="file" id="image" name="image" value="" required />
    </div>
    <div>
      <label for="hLink">Hosted Link</label>
      <input
        type="text"
        id="hlink"
        name="hlink"
        value=""
        placeholder="Hosted Link"
      />
      <!-- </textarea> -->
    </div>
    <div>
      <label for="gLink">GitHub Link</label>
      <input
        type="text"
        id="glink"
        name="glink"
        value=""
        placeholder="GitHub Link"
      />
      <!-- </textarea> -->
    </div>
    <div>
      <label for="gLink">Youtube Link</label>
      <input
        type="text"
        id="ylink"
        name="ylink"
        value=""
        placeholder="Youtube Link"
      />
      <!-- </textarea> -->
    </div>
    <div>
      <button type="submit">Submit</button>
    </div>
  </form>
</div>

<a href="/users/profile">Back</a>

<h1>Uploaded Projects</h1>
<div class="list">
  <% items.forEach(function(image) { %>
  <div class="listItem">
    <div>
      <img
        src="data:image/<%=image.img.contentType%>;base64,
                 <%=image.img.data%>"
        style="height: 300px; width: 300px"
      />
    </div>
    <div>
      <h3><%= image.name %></h3>
      <p><%= image.desc %></p>
      <p><%= image._id %></p>
    </div>
    <div>
      <a href="/deletethings/<%= image._id%>/deleteproject">
        <button class="cardbutton">Delete</button>
      </a>
    </div>
  </div>
  <% }) %>
</div>
